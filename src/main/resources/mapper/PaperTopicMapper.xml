<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.imooc.backstage.dao.PaperTopicDao">
    <insert id="insert">
        INSERT INTO paper_topic (id,paperId,topicId) VALUES
        (#{id},#{paperId},#{topicId})
    </insert>

    <update id="update"  parameterType="com.imooc.backstage.domain.PaperTopic">
        update paper_topic
        <trim prefix="set" suffixOverrides=",">
            <if test="paperId != null">name=#{paperId},</if>
            <if test="topicId != null">topicId=#{topicId}</if>
        </trim>
        where id=#{id}
    </update>
    <select id="selectPaper" parameterType="map" resultType="java.util.Map">
        SELECT  * from paper_topic
        <trim prefix="WHERE" suffixOverrides=",">
            <if test="paper.paperId > 0">paper_id=#{paper.paperId},</if>
        </trim>
    </select>
</mapper>